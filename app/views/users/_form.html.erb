<%= form_for(@user, html: {class: "form-horizontal"}) do |u| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="form-group">
      <div class="alert alert-danger col-sm-offset-2 col-sm-3">
        <h4><%= pluralize(@user.errors.count, "error") %> prohibited this task from being saved:</h4>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field form-group">
    <%= u.label :first_name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= u.text_field :first_name, :class => "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= u.label :last_name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= u.text_field :last_name, :class => "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= u.label :email, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= u.email_field :email, :class => "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= u.label :password, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= u.password_field :password, :class => "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= u.label :password_confirmation, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= u.password_field :password_confirmation, :class => "form-control" %>
    </div>
  </div>

  <% if @new_user == true %>
  <div class="actions col-sm-offset-2">
    <%= u.submit 'Create User', class: "btn btn-primary" %>
  </div>

  <% else %>
    <div class="actions col-sm-offset-2">
      <%= u.submit 'Update User', class: "btn btn-primary" %>
    </div>
    <br>
  <% end %>
  <br>
<% end %>
