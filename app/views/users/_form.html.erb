<%= form_for(@user, html: {class: "form-horizontal"}) do |u| %>

  <div class="field form-group">
    <%= u.label :first_name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= u.text_field :first_name, :class => "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= u.label :last_name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= u.text_field :last_name, :class => "form-control" %>
    </div>
  </div>
  <div class="field form-group">
    <%= u.label :email, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= u.email_field :email, :class => "form-control" %>
    </div>
  </div>

  <% if @new_user == true %>
  <div class="actions col-sm-offset-2">
    <%= u.submit 'Create User', class: "btn btn-primary" %>
  </div>
  <% end %>

  <% if @edit_user == true %>
    <div class="actions col-sm-offset-2">
      <%= u.submit 'Update User', class: "btn btn-primary" %>
    </div>
    <br>
  <% end %>
  <br>
<% end %>
