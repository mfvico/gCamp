  <body class="background_image">

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron text-center">
      <div class="container">
        <h1>gCamp</h1>
        <p>Your life, organized</p>
        <!--<p><a class="btn btn-primary btn-lg" role="button">Learn more &raquo;</a></p>-->
      </div>
    </div>

    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <div class="col-md-4">
          <img src="https://farm3.staticflickr.com/2833/8865586006_c5ce2a79e6_m.jpg">
          <h2>Tasks</h2>
          <p>Grouped by projects and lists. Just the way you like 'em</p>
        </div>
        <div class="col-md-4">
          <img src="https://farm9.staticflickr.com/8482/8203794182_8004f8f636_m.jpg">
