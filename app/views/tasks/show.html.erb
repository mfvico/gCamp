<% if notice != nil %>
  <p class="alert alert-success" id="notice"><%= notice  %></p>
<% end %>


<p>
  <strong>Task:</strong>
  <%= @task.task %>
</p>
<p>
  <strong>Due Date:</strong>
  <%= @task.due_date.strftime("%B %e %Y") %>
</p>
<p>
  <strong>Complete?</strong>
  <%= @task.complete %>
</p>

<%= link_to 'Edit', edit_task_path(@task)%> |
<%= link_to 'Back', tasks_path %>
