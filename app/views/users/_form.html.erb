<%= form_for(@user, html: {class: "form-horizontal"}) do |u| %>
  <div class="col-sm-5 row">
    <%= render 'shared/errors', model: @user %>
    <div class="field form-group">
      <%= u.label :first_name, :class => 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= u.text_field :first_name, :class => "form-control" %>
      </div>
    </div>
    <div class="field form-group">
      <%= u.label :last_name, :class => 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= u.text_field :last_name, :class => "form-control" %>
      </div>
    </div>
    <div class="field form-group">
      <%= u.label :email, :class => 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= u.email_field :email, :class => "form-control" %>
      </div>
    </div>
    <% if @user.id == nil %>
    <div class="field form-group">
      <%= u.label :password, :class => 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= u.password_field :password, :class => "form-control" %>
      </div>
    </div>
    <div class="field form-group">
      <%= u.label :password_confirmation, :class => 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= u.password_field :password_confirmation, :class => "form-control" %>
      </div>
    </div>
    <div class="field form-group">
      <%= u.label "Pivotal Tracker Token", :tracker_token, :class => 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= u.text_field :tracker_token, :class => "form-control" %>
      </div>
    </div>
    <% end %>
    <% if admin_check %>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <div class="checkbox">
          <label>
            <%= u.check_box :admin  %> Admin
          </label>
        </div>
      </div>
    </div>
    <% end %>



    <div class="actions field form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= u.submit class: "btn btn-primary" %>
      </div>
    </div>


    <br>
  <br>
</div>
<% end %>
