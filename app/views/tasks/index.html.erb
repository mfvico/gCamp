<% if notice != nil %>
  <p class="alert alert-success" id="notice"><%= notice  %></p>
<% end %>

<h1>Tasks</h1>

  <%= link_to 'Create Task', new_task_path, class: "btn btn-info pull-right" %>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due Date</th>
      <th>Complete?</th>
      <th></th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="col-md-7"><%= task.task %></td>
        <td class="col-md-1"><%= task.due_date %></td>
        <td class="col-md-1"><%= task.complete %></td>
        <td class="col-md-1"><%= link_to 'Show', task, class: "btn btn-success btn-sm" %></td>
        <td class="col-md-1"><%= link_to 'Edit', edit_task_path(task), class: "btn btn-warning btn-sm" %></td>
        <td class="col-md-1"><%= link_to 'Destroy', task, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>
