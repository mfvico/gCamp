<% if notice != nil %>
  <p class="alert alert-success" id="notice"><%= notice  %></p>
<% end %>
<div class="page-header">
  <div class="pull-right">
    <%= link_to_unless_current 'All', tasks_path(sort_by: "all")  %> |
    <%if params[:sort_by] == nil%>
      Incomplete
    <%else%>
      <%= link_to 'Incomplete', tasks_path %>
    <%end%>
    <%= link_to 'Create Task', new_task_path, class: "btn btn-info" %>
  </div>
  <h1>Tasks</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due Date</th>
      <th>Complete?</th>

      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="col-md-6"><%= task.task %></td>
        <% if task.due_date == nil %>
          <td class="col-md-2"> none </td>
        <%else%>
          <td class="col-md-2"><%= task.due_date.strftime("%B %e %Y") %></td>
        <%end%>
        <%if task.complete == true%>
          <td class="col-md-1">Complete</td>
        <%else%>
          <td class="col-md-1">Incomplete</td>
        <%end%>
        <td class="col-md-3">
          <div class="pull-right">
          <%= link_to 'Show', task, class: "btn btn-success btn-sm" %>
          <%= link_to 'Edit', edit_task_path(task), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Destroy', task, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </tr>
    <% end %>

  </tbody>
</table>

<br>
