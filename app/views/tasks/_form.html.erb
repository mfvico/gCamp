<%= form_for([@project, @task], html: {class: "form-horizontal"}) do |f| %>

    <div class="col-sm-4 row">
      <div class="field form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <%= render 'shared/errors', model: @task  %>
        </div>
      </div>

    <div class="field form-group">
      <%= f.label :task, :class => 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.text_field :task, :class => "form-control"%>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label :due_date, :class => 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.date_field :due_date, :class => "col-sm-10 form-control" %>
      </div>
    </div>
    <% if @task.id %>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-11">
          <div class="checkbox">
            <label>
              <%= f.check_box :complete  %> Complete
            </label>
          </div>
        </div>
      </div>
  <% else %>
    <% @task.complete = false %>
  <%end%>

  <div class="actions field form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
  </div>
  <br>
<% end %>
