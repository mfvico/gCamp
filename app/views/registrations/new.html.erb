
<div class=" well well-lg col-md-offset-4 col-md-4">
  <div class="text-center">
    <h1>Sign Up for gCamp!</h1>
    <br>
  </div>



<%= form_for @user, url: signup_path, html: {class: "form-horizontal"} do |f| %>

<%= render 'shared/errors', model: @user %>


  <div class="field form-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div>
      <%= f.text_field :first_name, :class => "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div >
      <%= f.text_field :last_name, :class => "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :email, :class => 'control-label' %>
    <div>
      <%= f.email_field :email, :class => "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password, :class => 'control-label' %>
    <div>
      <%= f.password_field :password, :class => "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, :class => ' control-label' %>
    <div>
      <%= f.password_field :password_confirmation, :class => "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label "Pivotal Tracker Token", :class => ' control-label' %>
    <div>
      <%= f.text_field :tracker_token, :class => "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.submit "Sign up", class: 'btn btn-primary ' %>
  </div>

<% end %>

</div>
