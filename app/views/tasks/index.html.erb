<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="col-md-9"><%= task.task %></td>
        <td class="col-md-1"><%= link_to 'Show', task, class: "btn btn-default btn-xs" %></td>
        <td class="col-md-1"><%= link_to 'Edit', edit_task_path(task), class: "btn btn-default btn-xs" %></td>
        <td class="col-md-1"><%= link_to 'Destroy', task, class: "btn btn-default btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: "btn btn-primary" %>
