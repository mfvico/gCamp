<% if notice != nil %>
  <p class="alert alert-success" id="notice"><%= notice  %></p>
<% end %>
<div class="page-header">
  <div class="pull-right">
     <%= link_to 'Create User', new_user_path, class: "btn btn-info" %>
  </div>
  <h1>Users</h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>

      <th colspan="3"></th>

    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= mail_to user.email %></td>
        <td class="col-md-3">
          <div class="pull-right">
          <%= link_to 'Show', user, class: "btn btn-success btn-sm" %>
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Destroy', user, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>
