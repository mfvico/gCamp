          <div>
            <h2>Comments</h2>
          </div>
          <ul>
            <li>Comment on tasks and documents</li>
            <li>Get e-mail notification</li>
          </ul>
        </div>
      </div>

    <div>
    <% @quotes.each do |quote| %>
      <p><%= quote.text %></p>
      <p><%= quote.author %> </p>
    <%end%>
  </div>

