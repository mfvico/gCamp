<div class="page-header">
  <h1><%= @project.name %>: Manage Members </h1>
</div>

<ol class="breadcrumb">
  <li><%= link_to "Projects", projects_path %></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li class="active">Members</li>
</ol>

<div class="well form-inline">
  <%= form_for([@project, @membership], html: {class: "form-inline"}) do |f| %>
    <%= f.label :user, class: "control-label" %>
    <%= f.collection_select(:user_id, User.all, :id, :full_name,  {include_blank: "Please Select a User"}, {class: "form-control"}) %>
    <%= f.select :role, [:member, :owner], {include_blank: "Please Select a Role"}, {class: "form-control"} %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>

  <% @memberships.each do |membership| %>
      <%=link_to membership.user.full_name, user_path(membership.user) %>
      <%= form_for [@project, membership] do |f|  %>
        <%= f.select :role, [:member, :owner] %>
        <%= f.submit %>
      <% end %>
  <% end %>
